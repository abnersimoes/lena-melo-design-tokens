{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "design-tokens.js",
          "format": "javascript/es6"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "design-tokens.css",
          "format": "css/variables"
        },
        {
          "destination": "font-face.css",
          "format": "css/fonts.css",
          "filter": {
            "attributes": {
              "category": "asset",
              "type": "font"
            }
          }
        }
      ]
    }
  }
}
