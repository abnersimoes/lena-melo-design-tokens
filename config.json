{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables"
        },
        {
          "destination": "font-face.css",
          "format": "css/fonts.css"
        }
      ]
    }
  }
}
